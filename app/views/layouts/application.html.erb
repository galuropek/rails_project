      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <%= link_to "Home", crews_path, :class => "nav-link" %>
        </li>
        <% unless user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Sign in", new_user_session_path, :class => "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Registration", new_user_registration_path, :class => "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Logout", destroy_user_session_path, :class => "nav-link", :method => :delete %>
          </li>
          <li>
            <%= link_to "Create a new Crew", new_crew_path, :class => "nav-link" %>
          </li>
          <li>
            <a class="nav-link disabled"><%= current_user.email %></a>
          </li>
        <% end %>
