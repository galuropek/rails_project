<h2>Edit User Details</h2>
<%= form_for :user_detail, url: user_path(@user_details.user_id), method: :patch do |f| %>
  <p>
    Nickname<br>
    <%= f.text_field :nickname %>
  </p>
  <p>
    Name<br>
    <%= f.text_field :name %>
  </p>
  <p>
    First Name<br>
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.submit :class => 'btn btn-warning' %>
  </p>
<% end %>